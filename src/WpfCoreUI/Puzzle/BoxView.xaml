                                <Setter Property="Background" Value="{StaticResource WrongValueBackgroundColor}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Square8.Value}">
                <TextBox.Style>
                    <Style BasedOn="{StaticResource SquareStyle}" TargetType="{x:Type TextBox}">
                        <Style.Triggers>
