                                <Setter Property="Background" Value="{StaticResource WrongValueBackgroundColor}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBox
                Grid.Row="2"
                Grid.Column="0"
                Text="{Binding Square7.Value}">
